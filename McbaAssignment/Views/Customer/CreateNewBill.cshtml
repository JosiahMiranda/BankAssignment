@model BillPay
@{
    ViewData["Title"] = "Create Bill";
    int accountNumber = ViewBag.AccountNumber;
}

<h1 class="display-4">Create Bill for Account: @accountNumber</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewBill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PayeeID" class="control-label"></label>
                <input asp-for="PayeeID" class="form-control" />
                <span asp-validation-for="PayeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTimeUtc" class="control-label">Scheduled Time</label>
                <input asp-for="ScheduleTimeUtc" class="form-control" />
                <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label">Period (O or M)</label>
                <input asp-for="Period" class="form-control" />
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.Hidden("accountNumber", @accountNumber)
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BillPays" asp-route-id="@accountNumber">Back to Bills</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
