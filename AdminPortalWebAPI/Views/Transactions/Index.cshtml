@model IEnumerable<Transaction>
@{
    ViewData["Title"] = "Transactions";
}

<div>
    <h1 class="display-4">Transactions for Account: </h1>
    
    <h3>Your Transactions</h3>
    <table class="table table-striped">
        <tr>
            <th>@Html.DisplayNameFor(x => x.TransactionID)</th>
            <th>@Html.DisplayNameFor(x => x.TransactionType)</th>
            <th>@Html.DisplayNameFor(x => x.DestinationAccountNumber)</th>
            <th>@Html.DisplayNameFor(x => x.Amount)</th>
            <th>@Html.DisplayNameFor(x => x.Comment)</th>
            <th>@Html.DisplayNameFor(x => x.TransactionTimeUtc)</th>
        </tr>
        @foreach(var transaction in Model) {
            <tr>
                <td>@Html.DisplayFor(x => transaction.TransactionID)</td>
                <td>@Html.DisplayFor(x => transaction.TransactionType)</td>
                <td>@Html.DisplayFor(x => transaction.DestinationAccountNumber)</td>
                <td>@Html.DisplayFor(x => transaction.Amount)</td>
                <td>@Html.DisplayFor(x => transaction.Comment)</td>
                <td>@transaction.TransactionTimeUtc.ToLocalTime()</td>
            </tr>
        }
    </table>

</div>

